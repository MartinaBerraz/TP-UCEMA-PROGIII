<div class="panel panel-default form-panel">
  <h2>Crea tu guardarropas</h2>
  <hr>
  <%= form_for @guardarropa do |f| %>
    <h5>Nombre</h5>
    <%= f.text_area :nombre %>

    <div class = "row">
      <% @prendas.each do |prenda| %>

        <% if current_user.id == prenda.user_id %>
          <label class="col-6 cols-sm-3">
            <%= f.check_box :prenda_ids, {multiple: true}, prenda.id, nil%>
            <%= prenda.descripcion %>
          </label>
          <% end %>
      <% end %>
    </div>
    <%= f.number_field :user_id, id: :guardarropa_user_id, value:current_user.id,type: :hidden %>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <%= f.submit :Create, class:"btn btn_sec"%>
      <a class="btn btn_sec" <%= link_to 'Cancelar', :back %></a>
    </div>
  <% end %>

</div>
