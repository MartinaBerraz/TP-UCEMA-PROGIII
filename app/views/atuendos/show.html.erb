<div class="card" style="max-width: 1100px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img class="card-img-top"
           src="<%= asset_path @atuendo.etiqueta %>" alt="Card image cap">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title"><%= @atuendo.nombre%> </h4>
        <p class="card-text"><%= @atuendo.etiqueta%></p>
        <p class="card-text">Rating: <%= @atuendo.clasificacion%></p>



          <% if @atuendo.prendas.any? %>
          <div class="row">
            <ul class="list-atuendos">
              <% @atuendo.prendas.each do |prenda| %>
                <li> <%=link_to prenda.descripcion, prenda_path %></li>
              <% end %>
            </ul>
          </div>
          <% else %>
            <h6 class="card-text">No hay prendas asociadas a este atuendo</h6>
          <%end %>



        <div class="d-grid gap-2 d-md-flex align-self-end">
          <a class="btn btn_sec" <%= link_to 'Volver', :back %></a>
        </div>

      </div>

    </div>

  </div>

</div>