<div class="panel panel-default form-panel">
  <h2>Ingresá tu prenda</h2>
  <hr>
  <%= form_for @prenda do |f| %>
    <h5>Descripción</h5>
    <%= f.text_area :descripcion %>
    <h5>Tipo</h5>
    <%= f.select :tipo, Prenda.tipos.keys, {}  %>
    <h5>Categoría</h5>
    <%= f.select :categoria, Prenda.categoria.keys, {} %>

    <h5>Color primario</h5>
    <label>Color que predomina:</label>
    <%= f.color_field :cprimario %>

    <h5>Color secundario</h5>
    <label>Seleccione otro color:</label>
    <%= f.color_field :csecundario %>

    <h5>Material</h5>
    <%= f.select :material, Prenda.materials.keys, {} %>



    <%= f.number_field :user_id, id: :prenda_user_id, value:current_user.id, type: :hidden %>


    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <%= f.submit :create, class:"btn btn_sec"%>
      <a class="btn btn_sec" <%= link_to 'Cancelar', :back %></a>
    </div>
  <% end %>
</div>