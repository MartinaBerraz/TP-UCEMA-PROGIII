<head>
  <script src="https://use.fontawesome.com/aa20e20d69.js"></script> <!--FS-->
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="d-flex flex-grow-1">
    <span class="w-100 d-lg-none d-block"><!-- hidden spacer to center brand on mobile --></span>
    <a class="navbar-brand" href="#">
      Dresscode
    </a>
    <div class="w-100 text-right">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#myNavbar7">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </div>
  <div class="collapse navbar-collapse flex-grow-1 text-right" id="myNavbar7">
    <ul class="navbar-nav ml-auto flex-nowrap">
      <li class="nav-item">
        <a class="nav-link" <%= link_to "Home", home_index_path %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" <%= link_to "Crear nueva prenda", new_prenda_path %></a>
      </li>
    </ul>
  </div>
</nav>

<div class="row row-cols-1 row-cols-md-6">
  <% @prendas.each do |prenda| %>
    <div class="col md-4 mb-3 mt-2">
      <div class="card h-100">
        <img src="<%= asset_path prenda.tipo %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%== prenda.tipo%></h5>
          <p class="card-text"><%== prenda.descripcion%></p>
          <a class="btn btn-primary bg-dark text-center mb-1" <%= link_to 'Mostrar', :action => :show, :id => prenda.id %></a>
          <a class="btn btn-primary bg-dark text-center mb-1"<%= link_to 'Editar', :action => :edit, :id => prenda.id %></a>
          <a class="btn btn-primary bg-dark text-center mb-1"<%= link_to 'Borrar', { :action => :destroy, :id => prenda.id }, :method => :delete, :data => { :confirm => 'Are you sure?' }  %></a>
        </div>
      </div>
    </div>
  <% end %>
 </div>
<%= will_paginate @prendas %>
</body>