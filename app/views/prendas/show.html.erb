<head>
  <script src="https://use.fontawesome.com/aa20e20d69.js"></script> <!--FS-->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="d-flex flex-grow-1">
    <span class="w-100 d-lg-none d-block"><!-- hidden spacer to center brand on mobile --></span>
    <a class="navbar-brand" href="#">
      Dresscode
    </a>
    <div class="w-100 text-right">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#myNavbar7">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </div>
  <div class="collapse navbar-collapse flex-grow-1 text-right" id="myNavbar7">
    <ul class="navbar-nav ml-auto flex-nowrap">
      <li class="nav-item">
        <a class="nav-link" <%= link_to "Home", home_index_path %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" <%= link_to "Crear nueva prenda", new_prenda_path %></a>
      </li>
    </ul>
  </div>
</nav>

<div class="card" style="max-width: 1100px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img class="card-img-top"
           src="<%= asset_path @prenda.tipo %>" alt="Card image cap">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title"><%== @prenda.descripcion%> </h4>
        <h5 class="card-text"><%== @prenda.tipo%></h5>

        <small class="text-muted">Color primario: </small>
        <h6 class="card-text"><%== @prenda.cprimario%></h6>
        <small class="text-muted">Color secundario: </small>
        <h6 class="card-text"><%== @prenda.csecundario%></h6>

        <p class="card-text"><small class="text-muted"><%= @prenda.categoria %></small></p>

        <div class="d-grid gap-2 d-md-flex align-self-end">
          <a class="btn btn_sec" <%= link_to 'Volver', :back %></a>
        </div>

      </div>

    </div>

  </div>

</div>

